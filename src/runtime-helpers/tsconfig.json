{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "removeComments": false,
        "declaration": true,
        "noEmitOnError": true,
        "outDir": "../../dist/client" /*output into same folder as where editor is served from*/,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "pretty": true,
        "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false
}