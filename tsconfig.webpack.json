{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "es2015"
    },
    "exclude": [
        "node_modules",
        "compiled",
        "src/server/**/*.ts",
        "src/runtime-helpers/**/*.ts",
        "dist/**/*.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "forkChecker": true,
        "useCache": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}